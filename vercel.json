{
  "version": 2,
  "rewrites": [
    { 
      "source": "/api/number(.*)", 
      "destination": "https://bronx-api-sable.vercel.app/search$1" 
    },
    { 
      "source": "/api/vehicle", 
      "destination": "https://bronx-rc-api.vercel.app/" 
    },
    { 
      "source": "/api/adhar/:path*", 
      "destination": "https://bronx-adhar-api.vercel.app/aadhar=:path*" 
    },
    { 
      "source": "/api/mail/:path*", 
      "destination": "https://bronx-mail-api.vercel.app/mail=:path*" 
    }
  ]
}
